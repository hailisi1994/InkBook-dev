<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hls.dao.UserDao">

    <resultMap type="com.hls.pojo.User" id="UserMap">
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="openid" column="openid" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="nickName" column="nick_name" jdbcType="VARCHAR"/>
        <result property="age" column="age" jdbcType="INTEGER"/>
        <result property="pro" column="pro" jdbcType="VARCHAR"/>
        <result property="grade" column="grade" jdbcType="VARCHAR"/>
        <result property="gender" column="gender" jdbcType="VARCHAR"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="integrity" column="integrity" jdbcType="INTEGER"/>
        <result property="avatarUrl" column="avatar_url" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserMap">
        select
          id, openid, name, nick_name, age, pro, grade, gender, phone, integrity, avatar_url
        from user
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserMap">
        select
          id, openid, name, nick_name, age, pro, grade, gender, phone, integrity, avatar_url
        from user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserMap">
        select
          id, openid, name, nick_name, age, pro, grade, gender, phone, integrity, avatar_url
        from user
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="openid != null and openid != ''">
                and openid = #{openid}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="nickName != null and nickName != ''">
                and nick_name = #{nickName}
            </if>
            <if test="age != null">
                and age = #{age}
            </if>
            <if test="pro != null and pro != ''">
                and pro = #{pro}
            </if>
            <if test="grade != null and grade != ''">
                and grade = #{grade}
            </if>
            <if test="gender != null and gender != ''">
                and gender = #{gender}
            </if>
            <if test="phone != null and phone != ''">
                and phone = #{phone}
            </if>
            <if test="integrity != null">
                and integrity = #{integrity}
            </if>
            <if test="avatarUrl != null and avatarUrl != ''">
                and avatar_url = #{avatarUrl}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into user(openid, name, nick_name, age, pro, grade, gender, phone, integrity, avatar_url)
        values (#{openid}, #{name}, #{nickName}, #{age}, #{pro}, #{grade}, #{gender}, #{phone}, #{integrity}, #{avatarUrl})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update inkbook.user
        <set>
            <if test="openid != null and openid != ''">
                openid = #{openid},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="nickName != null and nickName != ''">
                nick_name = #{nickName},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="pro != null and pro != ''">
                pro = #{pro},
            </if>
            <if test="grade != null and grade != ''">
                grade = #{grade},
            </if>
            <if test="gender != null and gender != ''">
                gender = #{gender},
            </if>
            <if test="phone != null and phone != ''">
                phone = #{phone},
            </if>
            <if test="integrity != null">
                integrity = #{integrity},
            </if>
            <if test="avatarUrl != null and avatarUrl != ''">
                avatar_url = #{avatarUrl},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from user where id = #{id}
    </delete>

</mapper>