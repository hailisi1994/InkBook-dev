/* pages/user/user.wxss */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  background: #fff;
}
.user-info-inner {
  width: 100%;
  display: block;
}
.bg-padding {
  width: 100%;
  height: 20rpx;
  background: #f5f5f5;
}
.user-info-inner .user-info-wrap {
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.user-info-wrap .user-info {
  display: flex;
  align-items: center;
}
.user-info .avater-img {
  width: 140rpx;
  height: 140rpx;
  overflow: hidden;
  border-radius: 50%;
  flex: 0 0 auto;
}
.user-info .avater-img image {
  width: 100%;
  height: 100%;
}
.user-info .username {
  font-size: 36rpx;
  font-weight: bold;
  color:#626262;
  margin-left: 20rpx;
  flex: 1;
  max-width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.user-info-wrap .reback-login-btn {
  font-size: 32rpx;
  padding: 10rpx 24rpx;
  border: 1rpx solid #aaa;
  overflow: hidden;
  border-radius: 20rpx;
}
.user-info-inner .book-content {
  padding: 20rpx 0;
}
.book-content .book-tips {
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}
.book-content .book-list{
  padding: 0 30rpx;
}
.book-list .book-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f1f1f1;
}
.book-list .book-item:last-child {
  border-bottom: none;
}
.book-item .book-img{
  width: 200rpx;
  height: 200rpx;
  display: block;
  flex: 0 0 auto;
  margin-right: 20rpx;
}
.book-item .book-info {
  flex: 1;
  max-width: 100%;
  overflow: hidden;
}
.book-info .book-text {
  font-size: 32rpx;
  margin-bottom: 10rpx;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.book-info .book-text:last-child {
  margin-bottom: 0;
}

.no-content {
  width: 100%;
  height: 300rpx;
  text-align: center;
  font-size: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

ec-canvas {
  width: 100%;
  height: 100%;
}